extends  _skeleton

block stylesheets
  link(rel='stylesheet', type='text/css', href='assets/admin-tools/admin-forms/css/admin-forms.css')

block body
  body.external-page.external-alt.sb-l-c.sb-r-c
    // Start: Main
    #main.animated.fadeIn
      // Start: Content-Wrapperr
      section#content_wrapper.bg-gradient-1.well-cover
        // Begin: Content
        section#content
          #login.admin-form.theme-info.mw500
            // Login Logo
            .row.table-layout
              a(href='dashboard.html', title='Return to Dashboard')
                img.center-block.img-responsive(src='assets/img/logos/logo-white.png', title='AdminDesigns Logo', style='max-width: 275px;')
            // Login Panel/Forms
            .panel.mb25
              form#contact(method='post', action='/')
                .panel-body.text-center.p50.text-center
                  .section
                    p.text-uppercase.text-white.ls100.fw700 Username
                    label.field.prepend-icon(for='username')
                      input#username.gui-input(type='text', name='username', placeholder='Enter username')
                  .section
                    p.text-uppercase.text-white.ls100.fw700 Password
                    label.field.prepend-icon(for='password')
                      input#password.gui-input(type='password', name='password', placeholder='Enter password')
                  .panel-footer.clearfix.p10.ph15
                    button.button.btn-primary.mr10.pull-right.text-uppercase.text-white.ls100.fw700(type='submit') Sign In
                    label.switch.ib.switch-primary.pull-left.input-align.mt10
                      input#remember(type='checkbox', name='remember', checked='')
                      label(for='remember', data-on='YES', data-off='NO')
                      = ' '
                      span Remember me
                  .section.text-left.pt20.pb10
                    a(href="#") Forget password?
                    p
                      span.text-white Haven't yet registration? #[a(href="#") Sign up here]
                  .section.row
                    .col-md-6
                      a.fw700.ls100.text-white.text-uppercase(href='#')
                        | Facebook
                    .col-md-6
                      a.fw700.ls100.text-white.text-uppercase(href='#')
                        | Google +
    // core scripts
    script(src='plugins/core.min.js')
    // Theme Javascript
    script(src='assets/js/utility/utility.js')
    script(src='assets/js/demo/demo.js')
    script(src='assets/js/main.js')
    // Page Javascript
    script(type='text/javascript').
      jQuery(document).ready(function () {
        "use strict";
        // Init Theme Core
        Core.init();
        // Init Demo JS
        Demo.init();
      });